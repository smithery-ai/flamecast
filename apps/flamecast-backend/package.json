{
	"name": "flamecast-backend",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev --port 6970 --inspector-port 6971",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"secrets:pull": "infisical export --path=/apps/flamecast --env=dev --format=dotenv > .env",
		"secrets:push": "infisical secrets set --file=.env --path=/apps/flamecast --env=dev",
    "build": "tsc --noEmit"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.2.2",
		"@smithery/flamecast": "workspace:*",
		"@smithery/flamecast-db": "workspace:*",
		"@smithery/utils": "workspace:*",
		"@workos-inc/node": "^8.3.1",
		"drizzle-orm": "^0.45.1",
		"fflate": "^0.8.2",
		"hono": "^4.11.9",
		"hono-openapi": "^1.1.2",
		"postgres": "^3.4.5",
		"zod": "^4.3.6",
		"zod-openapi": "^5.4.6"
	},
	"devDependencies": {
		"wrangler": "^4.4.0"
	}
}
