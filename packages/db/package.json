{
	"name": "@smithery/flamecast-db",
	"version": "1.0.0",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./dist/index.js"
		},
		"./schema": {
			"types": "./src/schema/index.ts",
			"default": "./dist/schema/index.js"
		}
	},
	"scripts": {
		"dev": "tsc --watch",
		"build": "tsc",
		"check-types": "tsc --noEmit",
		"db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate",
		"db:migrate": "NODE_OPTIONS='--import tsx' drizzle-kit migrate",
		"db:push": "NODE_OPTIONS='--import tsx' drizzle-kit push",
		"db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio"
	},
	"dependencies": {
		"drizzle-orm": "^0.45.1",
		"drizzle-zod": "^0.8.3",
		"postgres": "^3.4.5",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@smithery/typescript-config": "workspace:*",
		"@types/node": "^20.11.19",
		"drizzle-kit": "^0.31.8",
		"tsx": "^4.20.4",
		"typescript": "latest"
	}
}
