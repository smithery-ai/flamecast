{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"fmt": {
			"dependsOn": ["^fmt"]
		},
		"check": {
			"dependsOn": ["^check"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		}
	},
	"globalEnv": ["NODE_ENV", "GITHUB_TOKEN"]
}
