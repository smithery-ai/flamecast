{
	"name": "flamecast-monorepo",
	"private": true,
	"packageManager": "pnpm@10.29.2",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
