		"typecheck": "turbo run check-types"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.3",
		"turbo": "^2.7.3"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=10"
	}
}
